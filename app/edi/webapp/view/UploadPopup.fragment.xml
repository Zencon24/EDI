<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified">
    <Dialog
        id="uploadDialog"
        title="Upload File"
        stretchOnPhone="true"
        afterClose=".onDialogClose">
        
        <content>
            <unified:FileUploader
                id="fileUploader"
                name="myFileUpload"
                uploadUrl="upload/url/here"
                change="onFileChange"
                width="100%"/>
        </content>
        
        <buttons>
            <Button
                text="Upload"
                press="onUploadPress"/>
            <Button
                text="Close"
                press="onCloseDialog"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
